<body>
    <h1><%=@artist.name %></h1>

    <h3>Songs</h3>
    <%@artist.songs.each do |song| %>
        <p><%=song.name%></p>
        <a href="/songs/<%=song.slug%>">link</a>
        <br>
    <%end%>

    <h3>Genres</h3>
    <%@artist.genres.each do |genre| %>
        <p><%=genre.name%></p>
        <a href="/genres/<%=genre.slug%>">link</a>
        <br>
    <%end%>
</body>