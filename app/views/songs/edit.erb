<body>
    <h1>Update A Song</h1>
    <form action="/songs/<%=@song.id%>" method="post">
        <input type="hidden" name="_method" value="patch">
        <label>Name: </label>
        <input type="text" name="Name" value="<%=@song.name%>">

        <h2>New Artist</h2>
        <input type="text" name="Artist Name" value="<%=@song.artist.name%>">

        <h2>Existing Artists</h2>
        <%@artists.each do |artist| %>
            <input type="radio" name="artist" value="<%=artist.name%>" <%='checked' if @song.artist.id == artist.id %> >
            <label><%=artist.name%></label>
        <%end%>

        <h2>Genres</h2>
        <%@genres.each do |genre| %>
            <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %>>
            <label><%=genre.name%></label>
        <%end%>
        <br>
        <br>
        <input type="submit" value="Save">
    </form>
</body>