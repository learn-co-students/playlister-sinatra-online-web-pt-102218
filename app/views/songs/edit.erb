<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br>
  <input type="text" name="song_name" value= "<%=@song.name %>" id='Name'>
  <br>
  <label>Choose a Genre:</label>
  <br>
  <%@genres.each do |genre|%>
      <input type="checkbox" name="genre_id" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input>
  <%end%>
  <br>
  <label>Artist:</label>
  <input type="text" name="artist_name" id="Artist Name" value= "<%=@song.artist.name%>">
  <input type="submit" value="Save">
</form>
